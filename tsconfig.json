{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "./dist",
    "lib": ["ES2019"],
    "module": "esnext",
    "target": "ES2019",
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true
  },
  "include": ["src/**/*"]
}
